    "pdf-parse": "^1.1.1",
    "playwright": "^1.46.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@types/jsdom": "^21.1.7",
    "tsx": "^4.19.0",
    "typescript": "^5.5.4"
  }
}